{
  "name": "cheep",
  "description": "Be a Gamer without Paying a Fortune!!",
  "author": "@LuanderFarias",
  "version": "Beta 0.1.3",
  "license": "GPL-3.0",
  "main": "index.js",
  "scripts": {
    "test": "electron .",
    "pack": "build --dir",
    "build": "build"
  },
  "build": {
    "appId": "com.github.luanderFarias.Cheep",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "src/sources/icon.ico"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}
